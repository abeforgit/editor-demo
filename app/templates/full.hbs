{{page-title "Full"}}

<div class="c-dummy__header">
  <DebugTools @controller={{this.controller}} />
</div>

<AuBodyContainer>

  <div class="c-dummy__content">
    <div vocab="http://data.vlaanderen.be/ns/foo#" resource="#Foo" typeof="Foo">
      <div
        vocab="http://data.vlaanderen.be/ns/besluit#"
        prefix="eli: http://data.europa.eu/eli/ontology# prov: http://www.w3.org/ns/prov# mandaat: http://data.vlaanderen.be/ns/mandaat# besluit: http://data.vlaanderen.be/ns/besluit#"
        class="app-view"
      >
        <div
          class="au-c-body-container au-c-body-container--scroll"
          id="panel-1"
          role="tabpanel"
          tabindex="0"
          aria-labelledby="tab-1"
        >
          <EditorContainer
            @editorOptions={{hash
              editRdfa="true"
              showRdfaHighlight="true"
              showRdfaHover="true"
              showPaper="true"
              showToolbarBottom=null
            }}
            @showRdfaBlocks={{this.showRdfaBlocks}}
          >
            <:top>
              {{#if this.controller}}

                <ResponsiveToolbar>
                  <:main as |Tb|>
                    <Tb.Group>
                      <Plugins::History::Undo @controller={{this.controller}} />
                      <Plugins::History::Redo @controller={{this.controller}} />
                    </Tb.Group>
                    <Tb.Group>
                      <Plugins::TextStyle::Bold
                        @controller={{this.controller}}
                      />
                      <Plugins::TextStyle::Italic
                        @controller={{this.controller}}
                      />
                      <Plugins::TextStyle::Strikethrough
                        @controller={{this.controller}}
                      />
                      <Plugins::TextStyle::Underline
                        @controller={{this.controller}}
                      />
                      <Tb.Divider />
                      <Plugins::TextStyle::Subscript
                        @controller={{this.controller}}
                      />
                      <Plugins::TextStyle::Superscript
                        @controller={{this.controller}}
                      />
                      <Plugins::TextStyle::Highlight
                        @controller={{this.controller}}
                        @defaultColor="#FFEA00"
                      />
                      <Plugins::TextStyle::Color
                        @controller={{this.controller}}
                        @defaultColor="#000000"
                      />
                    </Tb.Group>
                    <Tb.Group>
                      <Plugins::List::Unordered
                        @controller={{this.controller}}
                      />
                      <Plugins::List::Ordered @controller={{this.controller}} />
                    </Tb.Group>
                    <Tb.Group>
                      <Plugins::Indentation::IndentationMenu
                        @controller={{this.controller}}
                      />
                    </Tb.Group>
                    <Tb.Group>
                      <Plugins::Link::LinkMenu
                        @controller={{this.controller}}
                      />
                      <Plugins::Image::InsertMenu
                        @controller={{this.controller}}
                      />
                    </Tb.Group>
                    <Tb.Group>
                      <Plugins::Table::TableMenu
                        @controller={{this.controller}}
                      />
                    </Tb.Group>
                    <Tb.Group>
                      <Plugins::Heading::HeadingMenu
                        @controller={{this.controller}}
                      />
                    </Tb.Group>
                    <Tb.Group>
                      <Plugins::Alignment::AlignmentMenu
                        @controller={{this.controller}}
                      />
                    </Tb.Group>
                  </:main>
                  <:side as |Tb|>
                    <Tb.Group>
                      <this.DocumentLanguagePill
                        @controller={{this.controller}}
                      />
                      <this.DocumentInfoPill @controller={{this.controller}} />
                    </Tb.Group>
                    <Tb.Group>
                      {{#if this.controller}}
                        <Plugins::HtmlEditor::Menu
                          @controller={{this.controller}}
                        />
                      {{/if}}
                    </Tb.Group>
                    <Tb.Group>
                      <Plugins::Formatting::FormattingToggle
                        @controller={{this.controller}}
                      />
                      <Plugins::RdfaBlockRender::RdfaBlocksToggle
                        @controller={{this.controller}}
                      />
                    </Tb.Group>
                  </:side>
                </ResponsiveToolbar>
              {{/if}}
            </:top>
            <:default>
              <Editor
                @plugins={{this.plugins}}
                @schema={{this.schema}}
                @nodeViews={{this.nodeViews}}
                @rdfaEditorInit={{this.rdfaEditorInit}}
              />
            </:default>
            <:aside>
              <Sidebar>
                <Plugins::Link::LinkEditor @controller={{this.controller}} />
                <this.RdfaEditor
                  @node={{this.activeNode}}
                  @controller={{this.controller}}
                />
                {{#if this.activeNode}}
                  <this.DebugInfo @node={{this.activeNode}} />
                  <this.AttributeEditor
                    @node={{this.activeNode}}
                    @controller={{this.controller}}
                  />
                {{/if}}
              </Sidebar>
            </:aside>
          </EditorContainer>
        </div>
      </div>
    </div>
  </div>
</AuBodyContainer>